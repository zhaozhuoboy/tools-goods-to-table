{
  "manifest_version": 3,
  "name": "京东商品同步到飞书表格",
  "version": "1.0.0",
  "description": "快速提取京东商品信息并同步到飞书表格",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.jd.com/*",
    "https://open.feishu.cn/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon.png",
      "48": "icons/favicon.png",
      "128": "icons/favicon.png"
    }
  },
  "icons": {
    "16": "icons/favicon.png",
    "48": "icons/favicon.png",
    "128": "icons/favicon.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://*.jd.com/*", "http://*.jd.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

